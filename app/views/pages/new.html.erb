<%= form_for :page, remote: true, url: pages_path, html: {role: "form"} do |f| %>
  <div class="row ">
    <div class="form-group col-md-8 col-md-offset-2">
      <%= f.label :url, class: "sr-only" %><br>
      <%= f.text_field :url, class: "form-control input-lg", placeholder: "Paste URL to start reading" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-4 col-xs-offset-4">
    	<%= f.label :speed %><br>
    	<%= f.select :speed,
          options_for_select([["60 wpm", 60], ["100 wpm", 100], ["200 wpm", 200]]),
          {},
          { :class => 'form-control' } %>
    </div>
  </div>

  <div class="row">
    <a id="show-options" class="row" style="cursor: pointer">Show advanced options</a>
  </div>

  <div class="row">
    <div id="advanced-options" style="display: none" class="form-group col-md-offset-2 col-md-8">
      <%= f.label :xpath, :class => "sr-only" %>
      <%= f.text_field :xpath, class: "form-control input-sm", placeholder: "Write custom xpath for extraction" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-4 col-xs-offset-4">
      <%= f.submit "Read!", :id => "read_btn", :class => "btn btn-primary btn-block", :style => "padding: 0" %>
    </div>
  </div>

  <div id="notification" class="row">
    &nbsp;
  </div>

<% end %>

<canvas id="myCanvas" width="350" height="70" style="border:1px solid #285e8e; border-radius: 5px; align: center">
  Your browser does not support the HTML5 canvas tag.
</canvas>
<div class="row">
  <div class="form-group col-xs-3 col-xs-offset-3">
    <%= button_to "Pause", pause_pages_path,
        remote: true,
        method: :put,
        :class => "btn btn-block btn-primary",
        :style => "padding: 0" %>
  </div>
  <div class="form-group col-xs-3">
    <%= button_to "Resume", resume_pages_path,
        remote: true,
        method: :put,
        :class => "btn btn-block btn-primary",
        :style => "padding: 0" %>
  </div>
</div>
