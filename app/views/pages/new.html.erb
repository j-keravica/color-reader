<%= form_for :page, remote: true, url: pages_path, html: {role: "form"} do |f| %>
  <div class="row ">
    <div class="form-group col-md-8 col-md-offset-2">
      <%= f.label :url, class: "sr-only" %><br>
      <%= f.text_field :url, class: "form-control input-lg", placeholder: "Copy URL to start reading" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-3 col-md-offset-3">
    	<%= f.label :speed %><br>
    	<%= f.select :speed,
          options_for_select([["60 wpm", 60], ["100 wpm", 100], ["200 wpm", 200]]),
          {},
          { :class => 'form-control' } %>
    </div>

    <div class="form-group col-md-3">
    	<%= f.label :color %><br>
    	<%= f.select :color,
          options_for_select([["black", "b"], ["random", "r"]]),
          {},
          { :class => 'form-control' } %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-2 col-md-offset-5">
      <%= f.submit "Read!", :id => "read_btn", :class => "btn btn-primary btn-sm" %>
    </div>
  </div>

<% end %>

<div id="notification">
  &nbsp;
</div>

<canvas id="myCanvas" width="350" height="70" style="border:1px solid #000000; align: center">
Your browser does not support the HTML5 canvas tag.
</canvas>
<div class="row">
  <div class="form-group col-md-3 col-md-offset-3">
    <%= button_to "Pause", pause_pages_path,
        remote: true,
        method: :put,
        :class => "btn btn-xs"  %>
  </div>
  <div class="form-group col-md-3">
    <%= button_to "Resume", resume_pages_path,
        remote: true,
        method: :put,
        :class => "btn btn-xs"  %>
  </div>
</div>
